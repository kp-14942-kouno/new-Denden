<UserControl x:Class="DenDen.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1920"
             Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダーエリア -->
        <Border Grid.Row="0" Background="#0078D4">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- タイトル -->
                <TextBlock Grid.Column="0"
                           Text="{Binding HeaderTitle}"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <!-- セッション情報 -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="案件：" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProjectName}" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="｜" Foreground="#80FFFFFF" Margin="16,0"/>
                    <TextBlock Text="オペレーター：" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding OperatorName}" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="｜" Foreground="#80FFFFFF" Margin="16,0"/>
                    <TextBlock Text="ログイン：" Foreground="#80FFFFFF" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding LoginTime}" Foreground="#80FFFFFF" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- ログアウトボタン -->
                <Button Grid.Column="2"
                        Content="ログアウト"
                        Command="{Binding LogoutCommand}"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="#80FFFFFF"
                        BorderThickness="1"
                        Padding="16,8"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- メインコンテンツエリア -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左パネル -->
            <Grid Grid.Column="0" Margin="0,0,4,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 検索エリア -->
                <Border Grid.Row="0" Background="White" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                    <StackPanel DataContext="{Binding SearchPanel}">
                        <TextBlock Text="検索" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                        <TabControl MinHeight="200" SelectedIndex="{Binding SelectedTabIndex}">
                            <!-- 顧客マスタ検索タブ -->
                            <TabItem Header="顧客マスタ">
                                <Grid Margin="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="顧客ID" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SearchCustomerId, UpdateSourceTrigger=PropertyChanged}" Height="28" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="顧客名" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SearchCustomerName, UpdateSourceTrigger=PropertyChanged}" Height="28" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="電話番号" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SearchTelNo, UpdateSourceTrigger=PropertyChanged}" Height="28" Margin="0,0,0,8"/>

                                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="クリア" Command="{Binding ClearSearchCommand}" Width="80" Height="36" Margin="0,0,8,0"/>
                                        <Button Content="検索" Command="{Binding SearchCustomerCommand}" Width="80" Height="36" Style="{StaticResource PrimaryButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <!-- 問合せ履歴検索タブ -->
                            <TabItem Header="問合せ履歴">
                                <Grid Margin="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="期間" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding SearchStartDate}" Height="28" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="～" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <DatePicker Grid.Row="0" Grid.Column="3" SelectedDate="{Binding SearchEndDate}" Height="28" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="カテゴリ" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                                              ItemsSource="{Binding Categories}"
                                              SelectedItem="{Binding SelectedCategory}"
                                              DisplayMemberPath="CategoryName"
                                              Height="28" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="ステータス" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                                              ItemsSource="{Binding Statuses}"
                                              SelectedItem="{Binding SelectedStatus}"
                                              DisplayMemberPath="StatusName"
                                              Height="28" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="オペレータ" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                    <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                                              ItemsSource="{Binding Operators}"
                                              SelectedItem="{Binding SelectedOperator}"
                                              DisplayMemberPath="OperatorName"
                                              Height="28" Margin="0,0,0,8"/>

                                    <StackPanel Grid.Row="4" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="クリア" Command="{Binding ClearSearchCommand}" Width="80" Height="36" Margin="0,0,8,0"/>
                                        <Button Content="検索" Command="{Binding SearchInquiryCommand}" Width="80" Height="36" Style="{StaticResource PrimaryButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </StackPanel>
                </Border>

                <!-- 検索結果エリア -->
                <Border Grid.Row="1" Background="White" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                    <Grid DataContext="{Binding SearchPanel}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="検索結果" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="レポート"
                                        Width="80" Height="28"
                                        Margin="0,0,8,0"
                                        Command="{Binding DataContext.ShowReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsEnabled="{Binding InquirySearchResults.Count, Converter={StaticResource PositiveToBoolConverter}}"/>
                                <Button Content="CSV出力"
                                        Width="80" Height="28"
                                        Command="{Binding DataContext.ExportCsvCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsEnabled="{Binding InquirySearchResults.Count, Converter={StaticResource PositiveToBoolConverter}}"/>
                            </StackPanel>
                        </Grid>

                        <!-- 顧客検索結果 -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding CustomerSearchResults}"
                                  SelectedItem="{Binding SelectedSearchResult}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  GridLinesVisibility="Horizontal"
                                  Visibility="{Binding CustomerSearchResults.Count, Converter={StaticResource PositiveToVisibilityConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="顧客Key" Binding="{Binding CustomerKey}" Width="100"/>
                                <DataGridTextColumn Header="顧客名" Binding="{Binding CustomerName}" Width="*"/>
                                <DataGridTextColumn Header="電話番号" Binding="{Binding TelNo}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- 問合せ履歴検索結果 -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding InquirySearchResults}"
                                  SelectedItem="{Binding SelectedSearchResult}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  GridLinesVisibility="Horizontal"
                                  Visibility="{Binding InquirySearchResults.Count, Converter={StaticResource PositiveToVisibilityConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="受付日時" Binding="{Binding FirstReceivedDateTime, StringFormat=yyyy/MM/dd HH:mm}" Width="130"/>
                                <DataGridTextColumn Header="顧客Key" Binding="{Binding CustomerKey}" Width="100"/>
                                <DataGridTextColumn Header="問合せ内容" Binding="{Binding InquiryContent}" Width="*"/>
                                <DataGridTextColumn Header="更新日時" Binding="{Binding UpdatedDateTime, StringFormat=yyyy/MM/dd HH:mm}" Width="130"/>
                                <DataGridTextColumn Header="更新者" Binding="{Binding UpdatedByName}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- 検索中インジケーター -->
                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="検索中..." Foreground="Gray"/>
                        </StackPanel>

                        <!-- 結果なし表示 -->
                        <TextBlock Grid.Row="1"
                                   Text="検索結果がありません"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding CustomerSearchResults.Count}" Value="0"/>
                                                <Condition Binding="{Binding InquirySearchResults.Count}" Value="0"/>
                                                <Condition Binding="{Binding IsSearching}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- 顧客情報エリア -->
                <Border Grid.Row="2" Background="White" CornerRadius="4" Padding="12">
                    <Grid DataContext="{Binding CustomerInfo}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="顧客情報" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

                        <TabControl Grid.Row="1">
                            <!-- 基本情報タブ -->
                            <TabItem Header="基本情報">
                                <Grid>
                                    <!-- 読み込み中表示 -->
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="読み込み中..." Foreground="Gray"/>
                                    </StackPanel>

                                    <!-- 顧客未選択表示 -->
                                    <TextBlock Text="顧客を選択してください"
                                               Foreground="Gray"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding HasCustomer, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                                    <!-- 顧客情報リスト -->
                                    <DataGrid ItemsSource="{Binding CustomerInfoItems}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              HeadersVisibility="None"
                                              GridLinesVisibility="Horizontal"
                                              BorderThickness="0"
                                              Visibility="{Binding HasCustomer, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="項目名" Binding="{Binding DisplayName}" Width="120">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter Property="Foreground" Value="#666666"/>
                                                        <Setter Property="Padding" Value="4"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="値" Binding="{Binding Value}" Width="*">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Padding" Value="4"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>

                            <!-- 過去履歴タブ -->
                            <TabItem Header="過去履歴">
                                <Grid>
                                    <!-- 顧客未選択表示 -->
                                    <TextBlock Text="顧客を選択してください"
                                               Foreground="Gray"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding HasCustomer, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                                    <!-- 問合せ履歴リスト -->
                                    <DataGrid ItemsSource="{Binding InquiryHistories}"
                                              SelectedItem="{Binding SelectedInquiry}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              SelectionMode="Single"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              BorderThickness="1"
                                              BorderBrush="#E0E0E0"
                                              GridLinesVisibility="Horizontal"
                                              Visibility="{Binding HasCustomer, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="受付日時" Binding="{Binding FirstReceivedDateTime, StringFormat=yyyy/MM/dd HH:mm}" Width="130"/>
                                            <DataGridTextColumn Header="カテゴリ" Binding="{Binding CategoryID}" Width="80"/>
                                            <DataGridTextColumn Header="問合せ内容" Binding="{Binding InquiryContent}" Width="*"/>
                                            <DataGridTextColumn Header="更新日時" Binding="{Binding UpdatedDateTime, StringFormat=yyyy/MM/dd HH:mm}" Width="130"/>
                                            <DataGridTextColumn Header="更新者" Binding="{Binding UpdatedByName}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Border>
            </Grid>

            <!-- 右パネル - 問合せ登録エリア -->
            <Border Grid.Column="1" Background="White" CornerRadius="4" Padding="16" Margin="4,0,0,0">
                <Grid DataContext="{Binding Inquiry}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="問合せ登録" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding ModeText}" Foreground="Gray" FontSize="12" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 入力フォーム -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 受電日時 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,16">
                                <TextBlock Text="受電日時" Margin="0,0,0,4"/>
                                <TextBox Height="32" IsReadOnly="True" Background="#F5F5F5"
                                         Text="{Binding ReceivedDateTime, StringFormat=yyyy/MM/dd HH:mm:ss}"/>
                            </StackPanel>

                            <!-- オペレーター -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,16">
                                <TextBlock Text="オペレーター" Margin="0,0,0,4"/>
                                <TextBox Height="32" IsReadOnly="True" Background="#F5F5F5"
                                         Text="{Binding OperatorName, Mode=OneWay}"/>
                            </StackPanel>

                            <!-- 顧客Key -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,16">
                                <TextBlock Text="顧客Key" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Height="32" IsReadOnly="True" Background="#F5F5F5"
                                             Text="{Binding CustomerKey, Mode=OneWay}"/>
                                    <Button Grid.Column="1" Content="紐付け" Width="60" Height="32" Margin="8,0,0,0"
                                            Command="{Binding LinkCustomerCommand}"/>
                                    <Button Grid.Column="2" Content="解除" Width="60" Height="32" Margin="8,0,0,0"
                                            Command="{Binding UnlinkCustomerCommand}"/>
                                </Grid>
                            </StackPanel>

                            <!-- カテゴリー -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,16">
                                <TextBlock Text="カテゴリー" Margin="0,0,0,4"/>
                                <ComboBox Height="32"
                                          ItemsSource="{Binding Categories}"
                                          SelectedItem="{Binding SelectedCategory}"
                                          DisplayMemberPath="CategoryName"/>
                            </StackPanel>

                            <!-- ステータス -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,16">
                                <TextBlock Text="ステータス" Margin="0,0,0,4"/>
                                <ComboBox Height="32"
                                          ItemsSource="{Binding Statuses}"
                                          SelectedItem="{Binding SelectedStatus}"
                                          DisplayMemberPath="StatusName"/>
                            </StackPanel>

                            <!-- 問合せ内容 -->
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,16">
                                <TextBlock Margin="0,0,0,4">
                                    <Run Text="問合せ内容"/>
                                    <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <TextBox Height="120"
                                         Text="{Binding InquiryContent, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <!-- 対応内容 -->
                            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,0,0,16">
                                <TextBlock Text="対応内容" Margin="0,0,0,4"/>
                                <TextBox Height="120"
                                         Text="{Binding ResponseContent, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <!-- カスタム項目エリア -->
                            <Border Grid.Row="5" Grid.ColumnSpan="2"
                                    BorderBrush="#E0E0E0" BorderThickness="1"
                                    CornerRadius="4" Padding="12" Margin="0,0,0,16"
                                    Visibility="{Binding HasCustomFields, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="カスタム項目" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <ItemsControl ItemsSource="{Binding CustomFields}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0,0,0,12">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <TextBlock Text="{Binding DisplayName}"/>
                                                        <TextBlock Text="*" Foreground="Red" Margin="2,0,0,0"
                                                                   Visibility="{Binding IsRequired, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                    <!-- Text型 -->
                                                    <TextBox Height="28"
                                                             Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                             Visibility="{Binding FieldType, Converter={StaticResource FieldTypeToVisibilityConverter}, ConverterParameter=Text}"/>
                                                    <!-- Number型 -->
                                                    <TextBox Height="28"
                                                             Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                             Visibility="{Binding FieldType, Converter={StaticResource FieldTypeToVisibilityConverter}, ConverterParameter=Number}"/>
                                                    <!-- Date型 -->
                                                    <DatePicker Height="28"
                                                                SelectedDate="{Binding Value}"
                                                                Visibility="{Binding FieldType, Converter={StaticResource FieldTypeToVisibilityConverter}, ConverterParameter=Date}"/>
                                                    <!-- Select型 -->
                                                    <ComboBox Height="28"
                                                              ItemsSource="{Binding SelectOptions}"
                                                              SelectedItem="{Binding SelectedOption}"
                                                              Visibility="{Binding FieldType, Converter={StaticResource FieldTypeToVisibilityConverter}, ConverterParameter=Select}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- カスタム項目なしメッセージ -->
                            <Border Grid.Row="5" Grid.ColumnSpan="2"
                                    BorderBrush="#E0E0E0" BorderThickness="1"
                                    CornerRadius="4" Padding="12" Margin="0,0,0,16"
                                    Visibility="{Binding HasCustomFields, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="カスタム項目" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Text="カスタム項目は設定されていません"
                                               Foreground="Gray"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                    <!-- ボタンエリア -->
                    <Grid Grid.Row="2" Margin="0,16,0,0">
                        <!-- 左側：印刷・プレビューボタン -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="プレビュー"
                                    Command="{Binding PreviewCommand}"
                                    Width="80" Height="36"
                                    Margin="0,0,8,0"
                                    Background="#F5F5F5"
                                    BorderBrush="#CCCCCC"/>
                            <Button Content="印刷"
                                    Command="{Binding PrintCommand}"
                                    Width="80" Height="36"
                                    Background="#F5F5F5"
                                    BorderBrush="#CCCCCC"/>
                        </StackPanel>
                        <!-- 右側：新規・クリア・登録ボタン -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="新規"
                                    Command="{Binding NewCommand}"
                                    Width="80" Height="36"
                                    Margin="0,0,8,0"
                                    Background="#F5F5F5"
                                    BorderBrush="#CCCCCC"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="クリア"
                                    Command="{Binding ClearCommand}"
                                    Width="100" Height="36"
                                    Margin="0,0,8,0"
                                    Background="#F5F5F5"
                                    BorderBrush="#CCCCCC"/>
                            <Button Content="{Binding SaveButtonText}"
                                    Command="{Binding SaveCommand}"
                                    Width="120" Height="36"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
