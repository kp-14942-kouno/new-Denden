{
  "DatabaseSettings": {
    "Environment": "Development",
    "DatabaseType": "SQLite",

    "SQLite": {
      "MasterDbPath": "./Data/Master.db",
      "HistoryDbPath": "./Data/History.db",
      "CustomerDbPath": "./Data/Customer.db"
    },

    "SqlServer": {
      "MasterConnectionString": "Server=localhost;Database=CallCenter_Master;Integrated Security=true;TrustServerCertificate=true;",
      "HistoryConnectionString": "Server=localhost;Database=CallCenter_History;Integrated Security=true;TrustServerCertificate=true;",
      "CustomerConnectionString": "Server=localhost;Database=CallCenter_Customer;Integrated Security=true;TrustServerCertificate=true;"
    },

    "Access": {
      "MasterDbPath": "\\\\FileServer\\CallCenter\\Master.accdb",
      "HistoryDbPath": "\\\\FileServer\\CallCenter\\History.accdb",
      "CustomerDbPath": "\\\\FileServer\\CallCenter\\Customer.accdb"
    }
  },

  "CustomerMasterSettings": {
    "Enabled": true,
    "TableName": "T_Customer",
    "KeyColumn": "CustomerID",
    "SearchColumns": [
      {
        "ColumnName": "CustomerID",
        "DisplayName": "顧客ID",
        "SearchType": "Exact"
      },
      {
        "ColumnName": "customer_name",
        "DisplayName": "顧客名",
        "SearchType": "Partial"
      },
      {
        "ColumnName": "tel_no",
        "DisplayName": "電話番号",
        "SearchType": "Partial"
      }
    ]
  },

  "CustomFieldSearchSettings": {
    "Enabled": true
  },

  "ImageSettings": {
    "Enabled": false,
    "TableName": "T_CustomerImages",
    "CustomerKeyColumn": "CustomerID",
    "ImagePathColumn": "ImagePath"
  }
}
